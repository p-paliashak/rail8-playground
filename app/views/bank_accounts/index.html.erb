
<div class="mx-auto p-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Bank Accounts</h1>
    <%= link_to 'New Account', new_bank_account_path, class: 'bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600' %>
  </div>

  <!-- Bank Accounts List -->
  <div class="bg-white shadow rounded-lg">
    <!-- Header Row -->
    <div class="flex items-center bg-gray-100 text-gray-700 font-semibold py-3 px-4">
      <div class="flex-1">Name</div>
      <div class="flex-1">Balance</div>
      <div class="flex-1 justify-end text-right">Actions</div>
    </div>

    <!-- Bank Account Rows -->
    <%= render @bank_accounts %>

    <!-- Empty State -->
    <% if @bank_accounts.empty? %>
      <div class="p-4 text-gray-500 text-center">No bank accounts found.</div>
    <% end %>
  </div>
</div>

