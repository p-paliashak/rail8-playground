<div class="bg-white shadow rounded-lg">
  <!-- Header Row -->
  <div class="flex items-center bg-gray-100 text-gray-700 font-semibold py-3 px-4">
    <div class="flex-1">Name</div>
    <div class="flex-1">Balance</div>
    <div class="flex-1 justify-end text-right">Actions</div>
  </div>

  <!-- Bank Account Rows -->
  <%= render bank_accounts %>

  <!-- Empty State -->
  <% if bank_accounts.empty? %>
    <div class="p-4 text-gray-500 text-center">No bank accounts found.</div>
  <% end %>
</div>