<div id="bank_account_<%= bank_account.id %>" class="p-4 border rounded-lg flex justify-between items-center">
  <div>
    <h2 class="text-lg font-semibold"><%= bank_account.name %></h2>
    <p class="text-gray-600">Balance: <%= number_to_currency(bank_account.balance) %></p>
  </div>
  <div class="space-x-2">
    <%= link_to 'Edit', edit_bank_account_path(bank_account), class: 'bg-yellow-500 text-white px-3 py-1 rounded' %>
    <%= button_to 'Delete', bank_account_path(bank_account), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'bg-red-500 text-white px-3 py-1 rounded' %>
  </div>
</div>
