<div class="bg-gray-800 text-white">
  <div class="max-w-6xl mx-auto flex items-center justify-between px-6 py-4">
    <!-- Logo -->
    <a href="/" class="text-2xl font-bold text-white hover:text-gray-300">
      MyApp
    </a>

    <!-- Navigation Links -->
    <div class="hidden md:flex space-x-6">
      <%= link_to "Dashboard", root_path, class: "hover:text-gray-300"%>
      <a href="/about" class="hover:text-gray-300">About</a>
      <a href="/contact" class="hover:text-gray-300">Contact</a>
    </div>

    <!-- Profile Dropdown -->
    <div class="relative" data-controller="dropdown">
      <!-- Trigger Button -->
      <button 
        class="flex items-center space-x-2 hover:bg-gray-700 px-3 py-2 rounded-md focus:outline-none focus:ring focus:ring-gray-600" 
        data-action="click->dropdown#toggle"
      >
        <img 
          src="https://via.placeholder.com/40" 
          alt="Profile" 
          class="w-8 h-8 rounded-full object-cover"
        />
        <span>John Doe</span>
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          class="h-4 w-4" 
          fill="none" 
          viewBox="0 0 24 24" 
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>

      <!-- Dropdown Menu -->
      <div 
        class="absolute right-0 mt-2 w-48 bg-white text-gray-700 rounded-md shadow-lg z-50 hidden" 
        data-dropdown-target="menu"
      >
        <a href="/profile" class="block px-4 py-2 hover:bg-gray-100">Profile</a>
        <%= button_to 'Sign Out', session_path, method: :delete, class: 'block text-left w-full px-4 py-2 hover:bg-gray-100' %>
      </div>
    </div>
  </div>
</div>
